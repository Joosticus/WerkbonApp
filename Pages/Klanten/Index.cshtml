@page
@model WerkbonApplicatie.Pages.Klanten.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Klant[0].Klant_Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant[0].Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant[0].Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant[0].Telefoonnummer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Klant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Klant_Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefoonnummer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.KlantID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.KlantID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.KlantID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
