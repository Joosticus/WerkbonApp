@page
@model WerkbonApplicatie.Pages.Klanten.DeleteModel

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijderen</h1>

<h3>U staat op het punt om een klant te verwijderen</h3>
<div>
    <h4>Klant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klant.Klant_Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.Klant_Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klant.Voornaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.Voornaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klant.Achternaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.Achternaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klant.Telefoonnummer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.Telefoonnummer)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Klant.KlantID" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-page="./Index">Terug naar overzicht</a>
    </form>
</div>
