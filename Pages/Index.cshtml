@page

@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}



<div class="row">
    <div class="col-md-6 col-sm-4">
        <div class="wrimagecard wrimagecard-topimage">
            <a asp-page="Werkbonnen/Index">
                <div class="wrimagecard-topimage_header" style="background-color:  rgba(213, 15, 37, 0.1)">
                    <center><i class="fa fa-clipboard" style="color:#d50f25"> </i></center>
                </div>
                <div class="wrimagecard-topimage_title">
                    <h4 class="text-center">
                        Werkbon
                    </h4>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-6 col-sm-4">
        <div class="wrimagecard wrimagecard-topimage">
            <a asp-page="Personeels/Index">
                <div class="wrimagecard-topimage_header" style="background-color:  rgba(51, 105, 232, 0.1)">
                    <center><i class="fa fa-users" style="color:#3369e8"> </i></center>
                </div>
                <div class="wrimagecard-topimage_title">
                    <h4 class="text-center">
                        Personeel
                    </h4>
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-12 col-sm-4">
        <div class="wrimagecard wrimagecard-topimage">
            <a asp-page="Exporteren/Index">
                <div class="wrimagecard-topimage_header" style="background-color:  rgba(250, 188, 9, 0.1)">
                    <center><i class="fa fa-file-download" style="color:#fabc09"> </i></center>
                </div>
                <div class="wrimagecard-topimage_title">
                    <h4 class="text-center">
                        Exporteren
                    </h4>
                </div>
            </a>
        </div>
    </div>
</div>

