@page
@model WerkbonApplicatie.EditModel

@{
    ViewData["Title"] = "Bijwerken";
}

<h1>Bijwerken</h1>

<h4>Personeel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Personeel.PersoneelID" />
            <div class="form-group">
                <label asp-for="Personeel.Personeel_Voornaam" class="control-label"></label>
                <input asp-for="Personeel.Personeel_Voornaam" class="form-control" />
                <span asp-validation-for="Personeel.Personeel_Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personeel.Personeel_Achternaam" class="control-label"></label>
                <input asp-for="Personeel.Personeel_Achternaam" class="form-control" />
                <span asp-validation-for="Personeel.Personeel_Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personeel.Password" class="control-label"></label>
                <input asp-for="Personeel.Password" class="form-control"/>
                <span asp-validation-for="Personeel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personeel.Functie" class="control-label"></label>
                <input asp-for="Personeel.Functie" class="form-control" />
                <span asp-validation-for="Personeel.Functie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personeel.Username" class="control-label"></label>
                <input asp-for="Personeel.Username" class="form-control" />
                <span asp-validation-for="Personeel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn green" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
