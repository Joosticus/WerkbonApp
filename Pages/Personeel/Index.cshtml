@page
@model WerkbonApplicatie.IndexModel

@{
    ViewData["Title"] = "Personeel overzicht";
}

    <div class="text-center">
        <h1 class="display-4">Personeel Overzicht</h1>
        <hr />
    </div>

<ul class="nav">
    <li class="nav-item">
        <a asp-page="Create" class="btn green mr-2">Toevoegen +</a>
    </li>
</ul>
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Personeel_Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Personeel_Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Functie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Personeel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Personeel_Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personeel_Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Functie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersoneelID">Bijwerken</a> |
                <a asp-page="./Details" asp-route-id="@item.PersoneelID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PersoneelID">Verwijderen</a>
            </td>
        </tr>
}
    </tbody>
</table>
