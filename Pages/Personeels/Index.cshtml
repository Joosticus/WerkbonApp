@page
@model WerkbonApplicatie.Pages.Personeels.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Personeelsoverzicht</h1>

<p>
    <a asp-page="Create"class="btn green mr-2">Personeel Toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Pesoneel_VoorNaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personeel[0].Personeel_Achternaam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Personeel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pesoneel_VoorNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personeel_Achternaam)
            </td>
            <td>
                <a asp-page="./Edit" class="btn green mr-2" asp-route-id="@item.PersoneelID">Aanpassen</a> |
                <a asp-page="./Details" class="btn green mr-2"asp-route-id="@item.PersoneelID">Details</a> |
                <a asp-page="./Delete" class="btn green mr-2"asp-route-id="@item.PersoneelID">Verwijderen</a>
            </td>
        </tr>
}
    </tbody>
</table>
