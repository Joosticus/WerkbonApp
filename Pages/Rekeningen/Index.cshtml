@page
@model WerkbonAppTest3.Pages.Rekeningen.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.Rekening[0].Bedrag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rekening[0].Betaalmethode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rekening) {
        <tr>
            <td>
                <p class="euro">€</p>@Html.DisplayFor(modelItem => item.Bedrag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Betaalmethode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
