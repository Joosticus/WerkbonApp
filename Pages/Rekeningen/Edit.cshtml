@page
@model WerkbonAppTest3.Pages.Rekeningen.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rekening</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rekening.ID" />
            <div class="form-group">
                <label asp-for="Rekening.Bedrag" class="control-label"></label>
                <input asp-for="Rekening.Bedrag" class="form-control" />
                <span asp-validation-for="Rekening.Bedrag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rekening.Betaalmethode" class="control-label"></label>
                <select asp-for="Rekening.Betaalmethode" class="form-control">
                    <option value="Contant">Contant</option>
                    <option value="Pinnen">Pinnen</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
