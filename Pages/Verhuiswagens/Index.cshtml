@model WerkbonAppTest3.Pages.Verhuiswagens.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Verhuiswagen[0].Kenteken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verhuiswagen[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verhuiswagen[0].Merknaam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Verhuiswagen) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kenteken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)<p class="euro">m³</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Merknaam)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
