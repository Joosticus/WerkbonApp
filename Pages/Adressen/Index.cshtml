@page
@model WerkbonApplicatie.Pages.Adressen.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Straat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Huisnummer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Plaats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Etage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres[0].Verhuizing)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Adres) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Straat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Huisnummer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plaats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verhuizing.VerhuizingID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AdresID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AdresID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AdresID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
