@model WerkbonAppTest3.Pages.Ongelukken.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ongeluk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ongeluk.KlantID" class="control-label"></label>
                <select asp-for="Ongeluk.KlantID" class ="form-control" asp-items="ViewBag.KlantID"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ongeluk.Schade" /> @Html.DisplayNameFor(model => model.Ongeluk.Schade)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ongeluk.Besproken" /> @Html.DisplayNameFor(model => model.Ongeluk.Besproken)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ongeluk.Kostenplaats" class="control-label"></label>
                <input asp-for="Ongeluk.Kostenplaats" class="form-control" />
                <span asp-validation-for="Ongeluk.Kostenplaats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
