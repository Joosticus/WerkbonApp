        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Klant_Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Klant_Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Voornaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Voornaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Achternaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Achternaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Datum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Schade_Veroorzaakt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Schade_Veroorzaakt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Werkbon.Bedrag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Werkbon.Bedrag)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Werkbon.WerkbonID" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-page="./Index">Terug naar overzicht</a>
    </form>
</div>
