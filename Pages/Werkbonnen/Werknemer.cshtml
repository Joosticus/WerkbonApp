@page
@model WerkbonApplicatie.Pages.WerknemerModel
@{
    ViewData["Title"] = "Werknemers toevoegen";
   
    int x = 0;
    // Haalt de laatste werkbon op om werknemers toe te voegen.
    foreach(var y in ViewBag.WerkbonID)
    {
        int result = Int32.Parse(y.Value);
        x = result;
    }

}

<h1>Werknemers toevoegen aan de werkbon</h1>

<form method="post">
    <div class="column">
        <div class="form-group">
            <label asp-for="Werkbonpersoneel.PersoneelID" class="control-label"></label>
            <select asp-for="Werkbonpersoneel.PersoneelID" class="form-control" asp-items="ViewBag.PersoneelID"></select>
        </div>
        <div class="form-group">
            <select asp-for="Werkbonpersoneel.WerkbonID" class="form-control" hidden>
                <option value="@x"></option>
            </select>
        </div>
    </div>
    <div class="form-group column">
        <input type="submit" id="accept" value="Toevoegen" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-page=Index>Terug naar overzicht</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Personeel:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Werkbonpersoneels)
        {
            @if (item.WerkbonID == x)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.personeel.Pesoneel_VoorNaam)
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

